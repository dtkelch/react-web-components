{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "jsx": "react",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["./dist", "./es"]
}
